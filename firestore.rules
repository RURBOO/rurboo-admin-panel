rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =========================================================
    // HELPER FUNCTIONS
    // =========================================================
    function isAuthenticated() {
      return request.auth != null;
    }

    function uid() {
      return request.auth.uid;
    }

    function isOwner(userId) {
      return isAuthenticated() && uid() == userId;
    }

    function isAdmin() {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/admins/$(uid()));
    }

    function isSuperAdmin() {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/admins/$(uid())) &&
        get(/databases/$(database)/documents/admins/$(uid())).data.role == 'super_admin';
    }

    function isDriver() {
      // Note: exists() costs 1 read. Consider Custom Claims for scale.
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/drivers/$(uid()));
    }

    // =========================================================
    // ADMINS (Enhanced for Operator Management)
    // =========================================================
    match /admins/{adminId} {
      // All admins can read other admins
      allow read: if isAuthenticated();
      
      // Only super admins can create, update, or delete other admins
      allow create: if isSuperAdmin();
      allow update: if isSuperAdmin();
      allow delete: if isSuperAdmin();
    }

    // =========================================================
    // ADMIN AUDIT LOGS (New - for tracking admin actions)
    // =========================================================
    match /admin_audit_logs/{logId} {
      allow read: if isAdmin();
      allow create: if isAdmin(); // Admins create their own audit logs
      allow update, delete: if false; // Immutable
    }

    // =========================================================
    // ADMIN ACTIONS (New - for tracking specific admin operations)
    // =========================================================
    match /adminActions/{actionId} {
      allow read: if isAdmin();
      allow create: if isAdmin();
      allow update, delete: if false; // Immutable
    }

    // =========================================================
    // USERS
    // =========================================================
    match /users/{userId} {
      allow create: if isOwner(userId);
      allow read: if isOwner(userId) || isAdmin();
      
      // Prevent privilege escalation
      allow update: if isOwner(userId)
        && !("role" in request.resource.data)
        && !("isAdmin" in request.resource.data)
        && !("walletBalance" in request.resource.data); // Wallet protected
      
      // Admins can update users (for user management)
      allow update: if isAdmin();
    }

    // =========================================================
    // DRIVERS (Enhanced for live location tracking)
    // =========================================================
    match /drivers/{driverId} {
      allow read: if isAuthenticated(); // Public read for booking

      // Driver can update specific fields (status, location, currentLocation)
      allow update: if isDriver()
        && uid() == driverId
        && (
           // Allow updating location/status and CURRENTLOCATION for live tracking
           request.resource.data.diff(resource.data).changedKeys()
            .hasOnly(["location", "currentLocation", "isOnline", "lastActive", "heading"]) ||
           // Allow initial setup
           resource.data.status == 'pending'
        );

      // Admins can fully manage drivers
      allow create, delete: if isAdmin();
      allow update: if isAdmin();
    }

    // =========================================================
    // RIDE REQUESTS (CORE LOGIC)
    // =========================================================
    match /rideRequests/{rideId} {

      // USER CREATES RIDE
      allow create: if isAuthenticated()
        // App sends 'pending' or 'scheduled'
        && (request.resource.data.status == "pending" || request.resource.data.status == "scheduled")
        && request.resource.data.userId == uid();

      // READ: User, Driver, Admin
      allow read: if isAuthenticated() && (
        resource.data.userId == uid() ||
        resource.data.driverId == uid() ||
        // Drivers need to see pending rides to accept them
        (resource.data.status == "pending" && isDriver()) || 
        isAdmin()
      );

      // UPDATE: STATE MACHINE & Logic
      allow update: if isAuthenticated() && (

        // USER CAN CANCEL
        (uid() == resource.data.userId &&
         resource.data.status in ["pending", "scheduled", "driver_accepted"] &&
         request.resource.data.status == "cancelled") ||

        // DRIVER ACCEPTS
        // Any driver can accept a pending ride
        (resource.data.status == "pending" &&
         request.resource.data.status == "driver_accepted" && 
         request.resource.data.driverId == uid()) ||

        // DRIVER UPDATES STATUS
        (uid() == resource.data.driverId &&
         request.resource.data.status in ["arrived", "started", "completed"]) ||

        // ADMIN OVERRIDE
        isAdmin()
      );
    }

    // =========================================================
    // RIDES (New - separate collection for completed rides)
    // =========================================================
    match /rides/{rideId} {
      allow read: if isAuthenticated() && (
        resource.data.userId == uid() ||
        resource.data.driverId == uid() ||
        isAdmin()
      );
      allow create: if isAuthenticated(); // Created by app/backend
      allow update, delete: if isAdmin(); // Only admins can modify
    }

    // =========================================================
    // RIDE HISTORY (Read Only for Users)
    // =========================================================
    match /history/{historyId} {
      allow create: if isAdmin(); // Populated by Backend/Admin
      allow read: if isAuthenticated() && (
        resource.data.userId == uid() ||
        resource.data.driverId == uid() ||
        isAdmin()
      );
      allow update, delete: if false;
    }

    // =========================================================
    // LEDGER ENTRIES (New - for finance tracking)
    // =========================================================
    match /ledger_entries/{entryId} {
      allow read: if isAdmin(); // Only admins can read financial records
      allow create: if isAdmin(); // Created by admin panel or backend
      allow update, delete: if isSuperAdmin(); // Only super admins can modify
    }

    // =========================================================
    // SUPPORT TICKETS (User App)
    // =========================================================
    match /support_tickets/{ticketId} {
      // App sends 'Open' (Capitalized)
      allow create: if isAuthenticated()
        && request.resource.data.userId == uid()
        && request.resource.data.status == "Open";

      allow read: if isAuthenticated() && (
        resource.data.userId == uid() ||
        isAdmin()
      );

      // User adds messages, Admin resolves
      allow update: if isAuthenticated() && (
        resource.data.userId == uid() ||
        isAdmin()
      );
    }

    // =========================================================
    // SUGGESTIONS (User App)
    // =========================================================
    match /suggestions/{suggestionId} {
      allow create: if isAuthenticated();
      allow read: if isAdmin();
    }

    // =========================================================
    // FEEDBACK (Driver App - REQUIRED)
    // =========================================================
    match /feedback/{feedbackId} {
      allow create: if isAuthenticated() && request.resource.data.driverId == uid();
      allow read: if isAdmin();
    }

    // =========================================================
    // CONFIG / RATES (Enhanced for admin updates)
    // =========================================================
    match /config/{document} {
      allow read: if isAuthenticated();
      
      // Only admins can update config (pricing, rates, etc.)
      allow write: if isAdmin();
    }

    // =========================================================
    // NOTIFICATIONS (New - for admin/driver/user notifications)
    // =========================================================
    // =========================================================
    // NOTIFICATIONS (Enhanced for Broadcast/Targeting)
    // =========================================================
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && (
        // 1. Direct Ownership
        resource.data.userId == uid() ||
        resource.data.targetId == uid() ||
        
        // 2. Broadcast - All Users
        (resource.data.targetAudience == 'all_users' && exists(/databases/$(database)/documents/users/$(uid()))) ||
        (resource.data.targetAudience == 'active_users' && exists(/databases/$(database)/documents/users/$(uid()))) || // Simplify for now
        
        // 3. Broadcast - All Drivers
        (resource.data.targetAudience == 'all_drivers' && isDriver()) ||
        
        // 4. Broadcast - Everyone
        resource.data.targetAudience == 'everyone' ||
        
        // Admin Access
        isAdmin()
      );
      
      allow create: if isAdmin(); // Only admins send
      allow update: if isAuthenticated() && (
         // User marking as read (only if it's their specific doc)
         (resource.data.userId == uid() && request.resource.data.diff(resource.data).changedKeys().hasOnly(['read'])) ||
         isAdmin()
      );
      allow delete: if isAdmin();
    }

    // =========================================================
    // SOS / EMERGENCY INCIDENTS (New - for risk management)
    // =========================================================
    match /sos_incidents/{incidentId} {
      allow create: if isAuthenticated(); // Users/drivers can create SOS
      allow read: if isAuthenticated() && (
        resource.data.userId == uid() ||
        resource.data.driverId == uid() ||
        isAdmin()
      );
      allow update: if isAdmin(); // Only admins can update/resolve SOS
      allow delete: if isSuperAdmin();
    }

    // =========================================================
    // DEFAULT DENY
    // =========================================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
